apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: backend-ingress
  namespace: default
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /api/books  # ðŸ‘ˆ Rewrite /books â†’ /
spec:
  ingressClassName: nginx
  rules:
    - http:
        paths:
          - path: /books
            pathType: Prefix
            backend:
              service:
                name: backend-service
                port:
                  number: 80

